{% extends "base.xml" %}
{% block content %}
<form id="record_form">
  	<record name="recording" beep="true" maxtime="{{ max_time_input }}s" finalsilence="4s" dtmfterm="true" {% if barge_in %} bargein="true" {% endif %} >
  		<prompt>
  		    <audio src="{{ ask_name_voice_label }}"/>
  		</prompt>
	    <noinput>
	         <audio src="{{ did_not_hear_voice_label }}"/>
	         <reprompt/>
	    </noinput>
  	</record>
    {% if repeat_recording_to_caller %}
    <block>
        <prompt>
        <audio src="{{ repeat_voice_label }}"/> <audio expr="recording"/>
        </prompt>
    </block>
    {% endif %}
    <goto next="#test_form" />
</form>

<form id="test_form">
	<block>
	    <prompt>
	        <audio src="{{ask_confirmation_voice_label}}"/>
	    </prompt>
	</block>
</form>
{% endblock %}

        </prompt>
    </block>
    <goto next="#confirm_form" />
</form> -->
<form id="confirm_form">
    <field name="confirm">
        <prompt>
            <audio src="{{ask_confirmation_voice_label}}"/>
        </prompt>
        <grammar xml:lang="en-US" root = "MYRULE" mode="dtmf">
            <rule id="MYRULE" scope = "public">
              <one-of>
                  <item>1</item>
                  <item>2</item>
              </one-of>
            </rule>
        </grammar>
        <filled>
            <if cond="confirm == '1'">
                <goto next="#test_form" />
         	  </if>
            <if cond="confirm == '2'">
              <goto next="#test_form" />
            </if>
        </filled>
 	  </field>
</form>

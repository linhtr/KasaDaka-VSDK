{% extends "base.xml" %}
{% block content %}
<form id="record_form">
  	<record name="recording" beep="true" maxtime="{{ max_time_input }}s" finalsilence="4s" dtmfterm="true" {% if barge_in %} bargein="true" {% endif %} >
  		<prompt>
  		    <audio src="{{ ask_name_voice_label }}"/>
  		</prompt>
	    <noinput>
	         <audio src="{{ did_not_hear_voice_label }}"/>
	         <reprompt/>
	    </noinput>
  	</record>
    <goto next="{% if repeat_recording_to_caller %}repeat_form{% else %}test_form{% endif %}" />
</form>
<form id="repeat_form">
    <block>
        <prompt>
        <audio src="{{ repeat_voice_label }}"/> <audio expr="recording"/>
        </prompt>
    </block>
    <goto next="#confirm_form" />
</form>

